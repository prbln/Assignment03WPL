<!DOCTYPE html>
<html>
  <head>
    <script src="/js/index.js"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div id="header">
      <h6>Home</h6>
      <h1>Arcade</h1>
      <p>This is the list of available games</p>
      <button id="addGameButton" class="btn btn-primary" onclick="addNewGame()" >
        Add new game
      </button>
      <div id="filterInput">
        <input class="filterfield" type="text" placeholder="name" />
        <input class="filterfield" type="text" placeholder="filter" />
        <button id="searchButton" class="btn btn-info">Search</button>
      </div>
    </div>
    <div id="cardContainer">
      <% games.forEach((game) => { %>
      
        <div class="card" style="width: 25rem; height: 20rem;">
          <img class="card-img-top" src=
          "<%=game.image.path%>"
        alt="<%=
          game.image.description
        %>" style="max-width: 100%; max-height: 15rem;"/><a>
          <div class="card-body">
            <p class="card-text"><%=game.name%></p>
          </div>
        </div>
        <% }); %>
    </div>
  </body>
</html>
